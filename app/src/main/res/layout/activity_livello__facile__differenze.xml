<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Livello_Facile_Differenze">


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="1080px"
        android:layout_height="800px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/notCorrect"
            android:onClick="notCorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/correct2"
            android:onClick="correct2"
            android:layout_width="270px"
            android:layout_height="270px"
            android:background="@drawable/finderr"/>

        <Button
            android:id="@+id/correct1"
            android:onClick="correct1"
            android:layout_width="270px"
            android:layout_height="270px"
            android:background="@drawable/finderr" />

    </FrameLayout>

    <TextView
        android:id="@+id/immagineCorr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FACILE : 1 DI 10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="6dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/punteggioCorr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Corretti: 0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />
</android.support.constraint.ConstraintLayout>
